# syntaxe d'une primitive :
#
# type_de_la_primitive
# [tab][-][space]nom_du_champ_1[:][space]valeur_du_champ_1
# [tab][-][space]nom_du_champ_2[:][space]valeur_du_champ_2
# [tab][-][space]nom_du_champ_3[:][space]valeur_du_champ_3
# ...
#
# Syntaxe des valeurs d'un champs contenant plusieurs valeur numerique :
# val1[,]val2[,]val3
#
# liste des type de primitive :
# - light
# - camera
# - sphere
#
# liste des champs : nom: type de valeur
# - name: string
# - origin: double_x,double_y,double_z
# - rotation: double_x,double_y,double_z
# - rayon: double (sphere seulement)
#
# les champs omis valent 0 ou chaine vide

cone
	- name: cone conique
	- origin: 0,0,100
	- angle: 156
	- color: 46546

sphere
	- name: sphere vert
	- origin: 50,0,300
	- rayon: 20
	- color: 65280

sphere
	- name: sphere bleu
	- origin: -50,0,300
	- rayon: 20
	- color: 255

sphere
	- name: sphere rouge
	- origin: 50,0,400
	- rayon: 20
	- color: 16711680

